<?xml version="1.0" encoding="UTF-8"?>
<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="Ribbon_Load">
  <ribbon>
    <tabs>
      <tab idMso="TabAddIns">
        <group id="MyGroup"
               label="Simple Pens">
          <labelControl id="SimplePensLabel" label="Enable SimplePens:"/>
          <checkBox id="ToggleCustomSlideShowForPresenter" label="when using Presenter view" getPressed="getSSPlusEnabledForPresenter" onAction="DisplayPresentationForPresenter"/>
          <checkBox id="ToggleCustomSlideShowForDefault" label="when not using Presenter view" getPressed="getSSPlusEnabledForDefault" onAction="DisplayPresentationForDefault"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>

